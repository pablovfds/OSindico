<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_morador"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.edu.ufcg.osindico.registerDweller.ui.RegisterDwellerActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome_CondomÃ­nio"
        android:id="@+id/nome_condominio"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/nome_morador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:layout_marginTop="25dp"
        android:inputType="textPersonName"
        android:layout_below="@id/nome_condominio"/>

    <EditText
        android:id="@+id/telefone_morador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone"
        android:layout_marginTop="25dp"
        android:inputType="text|phone"
        android:layout_below="@id/nome_morador"/>

    <EditText
        android:id="@+id/email_morador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:layout_marginTop="25dp"
        android:inputType="textEmailAddress"
        android:layout_below="@id/telefone_morador"/>

    <EditText
        android:id="@+id/senha_morador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:layout_marginTop="25dp"
        android:inputType="textPassword"
        android:layout_below="@id/email_morador"/>

    <EditText
        android:id="@+id/confirmar_senha_morador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmar senha"
        android:layout_marginTop="25dp"
        android:inputType="textPassword"
        android:layout_below="@id/senha_morador"/>

    <LinearLayout
        android:layout_below="@+id/confirmar_senha_morador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cadastrar_morador"
            android:text="Cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/btn_limpar_dados"
            android:text="Limpar Dados"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"/>
    </LinearLayout>

</RelativeLayout>
